{
  "name": "@aurynx/vite-plugin",
  "version": "0.4.0",
  "description": "A Vite plugin to compile Aurynx template syntax into native, high-performance PHP.",
  "author": "Anton Semenov",
  "license": "MIT",
  "homepage": "https://github.com/aurynx/vite-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aurynx/vite-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/aurynx/vite-plugin/issues"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "php",
    "template",
    "aurynx",
    "ssr"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "oxlint src test",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "oxlint": "^0.18.1",
    "release-it": "^19.0.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": "oxlint --fix"
  }
}
